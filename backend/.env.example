# Server Configuration
PORT=7000                              # Port on which the server will run
NODE_ENV=development                   # Environment mode (development/production/test)
APP_VERSION=1.0.0                      # Application version used in API responses

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/boosty  # MongoDB connection string

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here    # Secret key for JWT token generation (change in production)
JWT_EXPIRE=7d                          # JWT token expiration time (e.g., 7d, 24h, 60m)

# Email Configuration (if using nodemailer)
EMAIL_HOST=smtp.gmail.com              # SMTP server host
EMAIL_PORT=587                         # SMTP server port
EMAIL_USER=your_email@gmail.com        # SMTP username for sending emails
EMAIL_PASS=your_email_password         # SMTP password for sending emails

# API Configuration
API_URL=http://localhost:7000          # Base URL for API testing scripts

# Other Configuration
CORS_ORIGIN=http://localhost:3000      # Allowed CORS origins (comma-separated for multiple)