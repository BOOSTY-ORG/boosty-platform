{
  "name": "boosty-platform",
  "version": "1.0.0",
  "description": "A MERN stack application for Boosty, a solar energy company platform",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "npm run build --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "npm run test --workspace=backend",
    "test:frontend": "npm run test --workspace=frontend",
    "test:watch": "concurrently \"npm run test:watch:backend\" \"npm run test:watch:frontend\"",
    "test:watch:backend": "npm run test:watch --workspace=backend",
    "test:watch:frontend": "npm run test:watch --workspace=frontend",
    "test:coverage": "npm run test:coverage:backend && npm run test:coverage:frontend",
    "test:coverage:backend": "npm run test:coverage --workspace=backend",
    "test:coverage:frontend": "npm run test:coverage --workspace=frontend",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "npm run lint --workspace=backend",
    "lint:frontend": "npm run lint --workspace=frontend",
    "lint:fix": "npm run lint:fix:backend && npm run lint:fix:frontend",
    "lint:fix:backend": "npm run lint:fix --workspace=backend",
    "lint:fix:frontend": "npm run lint:fix --workspace=frontend",
    "install:all": "npm install && npm install --workspace=frontend && npm install --workspace=backend",
    "clean": "rimraf node_modules frontend/node_modules backend/node_modules",
    "start": "npm run start:backend",
    "start:backend": "npm run start --workspace=backend",
    "preview": "npm run preview --workspace=frontend",
    "deploy:build": "npm run build && docker-compose build",
    "deploy:up": "docker-compose up -d",
    "deploy:down": "docker-compose down",
    "deploy:logs": "docker-compose logs -f",
    "deploy:ps": "docker-compose ps",
    "deploy:restart": "docker-compose restart",
    "deploy:prod": "npm run deploy:build && npm run deploy:up",
    "deploy:prod:stop": "npm run deploy:down",
    "deploy:prod:logs": "npm run deploy:logs",
    "deploy:prod:status": "npm run deploy:ps",
    "deploy:prod:restart": "npm run deploy:restart",
    "docker:build": "docker-compose build",
    "docker:build:frontend": "docker-compose build frontend",
    "docker:build:backend": "docker-compose build backend",
    "docker:run": "docker-compose up",
    "docker:run:detached": "docker-compose up -d",
    "docker:stop": "docker-compose stop",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "docker:clean:images": "docker system prune -af",
    "deploy:init": "cp .env.docker .env && cp backend/.env.production backend/.env && cp frontend/.env.production frontend/.env",
    "deploy:check": "docker-compose config",
    "deploy:backup": "docker-compose exec mongo mongodump --out /data/backup/$(date +%Y%m%d_%H%M%S)"
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "solar",
    "energy",
    "mern",
    "react",
    "node",
    "express",
    "mongodb"
  ],
  "author": "Boosty Platform Team",
  "license": "ISC"
}
