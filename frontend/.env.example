# API Configuration
VITE_API_BASE_URL=http://localhost:7000/api

# WebSocket Configuration
VITE_WS_URL=ws://localhost:7000

# Application Configuration
VITE_APP_NAME=Boosty Platform
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Solar Energy Management Platform

# Environment
VITE_NODE_ENV=development

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG=true
VITE_ENABLE_MOCK_DATA=false

# Third-party Services
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# Map Configuration
VITE_MAP_API_KEY=
VITE_DEFAULT_LATITUDE=6.5244
VITE_DEFAULT_LONGITUDE=3.3792

# File Upload Configuration
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Authentication Configuration
VITE_TOKEN_EXPIRY=3600
VITE_REFRESH_TOKEN_EXPIRY=604800

# Cache Configuration
VITE_CACHE_TTL=300000
VITE_ENABLE_CACHE=true

# Rate Limiting
VITE_RATE_LIMIT_WINDOW=60000
VITE_RATE_LIMIT_MAX=100

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# Pagination Configuration
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100

# Date Configuration
VITE_DEFAULT_TIMEZONE=Africa/Lagos
VITE_DEFAULT_DATE_FORMAT=PPP

# Currency Configuration
VITE_DEFAULT_CURRENCY=NGN
VITE_SUPPORTED_CURRENCIES=NGN,USD,EUR,GBP

# Notification Configuration
VITE_ENABLE_NOTIFICATIONS=true
VITE_NOTIFICATION_DURATION=5000

# Export Configuration
VITE_EXPORT_FORMATS=pdf,csv,xlsx,json

# Chart Configuration
VITE_CHART_ANIMATION_DURATION=750
VITE_CHART_DEFAULT_TYPE=line

# Security Configuration
VITE_ENABLE_CSRF_PROTECTION=true
VITE_SESSION_TIMEOUT=1800000

# Performance Configuration
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_CODE_SPLITTING=true
VITE_ENABLE_MINIFICATION=true